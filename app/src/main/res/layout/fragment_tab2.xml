<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TextView
        android:text="Wybierz rodzaj treningu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#040404"
        android:textStyle="bold"
        android:background="#C2B280"
        android:padding="3dp"
        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/training_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:background="@drawable/textview_email_border" />

    <TextView
        android:id="@+id/way_of_training"
        android:text="Wybierz sposób odbywania treningu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#040404"
        android:textSize="20sp"
        android:background="#C2B280"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

    <TextView
        android:id="@+id/subtraining_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:background="@drawable/textview_email_border" />

    <TextView
        android:text="Wybierz częstotliwość odbywania treningu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#040404"
        android:textStyle="bold"
        android:background="#C2B280"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/duration_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:background="@drawable/textview_email_border" />

    <TextView
        android:id="@+id/bodyPartsText"
        android:text="Wybierz interesujące Cię partie ciała"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#040404"
        android:textStyle="bold"
        android:background="#C2B280"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>