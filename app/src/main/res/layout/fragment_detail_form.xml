<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/titleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/itemPicture"
        android:text="Wybierz rodzaj treningu:"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:popupBackground="?attr/colorSurface"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/typeDesciption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/textview_email_border"
        android:justificationMode="inter_word"
        android:padding="20sp"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titleWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Wybierz sposób odbywania treningu:"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/waySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:popupBackground="?attr/colorSurface"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/wayDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/textview_email_border"
        android:justificationMode="inter_word"
        android:padding="20sp"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titleFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Wybierz częstotliwość odbywania treningu:"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/frequencySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:popupBackground="?attr/colorSurface"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/frequencyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/textview_email_border"
        android:justificationMode="inter_word"
        android:padding="20sp"
        android:textSize="16sp"
        android:visibility="gone" />
        android:justificationMode="inter_word"
        android:background="@drawable/textview_email_border" />

    <TextView
        android:id="@+id/bodyPartsText"
        android:text="Wybierz interesujące Cię partie ciała"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#040404"
        android:textStyle="bold"
        android:background="#C2B280"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>