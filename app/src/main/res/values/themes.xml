<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitToBeFit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/ourWhite</item>
        <item name="colorPrimary">@color/ourGreenDay</item>
        <item name="colorPrimaryVariant">@color/ourBlack</item>
        <item name="colorOnPrimary">@color/ourGray</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorAccent">@color/ourGreenDay</item>
        <item name="android:navigationBarColor">@color/ourBlack</item>
    </style>
    <style name="Theme.GitToBeFit.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/ourWhite</item>
        <item name="colorPrimary">@color/ourGreenDay</item>
        <item name="colorOnSurface">@color/ourBlack</item>
        <item name="colorPrimaryVariant">@color/ourBlack</item>
        <item name="colorOnPrimary">@color/ourGray</item>
        <item name="colorPrimarySurface">@color/ourGreen</item>
        <item name="colorOnBackground">@color/ourGreenDay</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorAccent">@color/ourGreenDay</item>
        <item name="colorSurface">@color/ourGray</item>
        <item name="android:navigationBarColor">@color/ourBlack</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorPrimaryVariant</item>
    </style>

<!--style przyciskÃ³w -->
