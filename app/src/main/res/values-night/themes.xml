<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitToBeFit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/ourWhite</item>
        <item name="colorPrimary">@color/ourBlackBar</item>
        <item name="colorPrimaryVariant">@color/ourBlack</item>
        <item name="colorOnPrimary">@color/ourGreen</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ourBlackBar</item>
        <item name="colorAccent">@color/ourGreen</item>
        <item name="android:navigationBarColor">@color/ourBlackBar</item>
    </style>
    <style name="Theme.GitToBeFit.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_activity</item> // kolor tła aplikacji
        <item name="colorPrimary">@color/ourGreen</item> // kolor buttona, kolor bara
        <item name="colorPrimaryVariant">@color/ourWhite</item>
        <item name="colorOnSurface">@color/ourWhite</item>
        <item name="colorOnPrimary">@color/ourGray</item>
        <item name="colorOnBackground">@color/appBarNight</item>
        <item name="colorPrimarySurface">@color/ourGray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ourBlackBar</item> // kolor nad barem
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/ourGreen</item>
        <item name="colorSurface">@color/detailsList</item>
        <item name="android:navigationBarColor">@color/ourBlackBar</item> // kolor przyciskow
    </style>
    <!--style przycisków -->
    <style name="roundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>
    <style name="roundButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>
    <style name="noroundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>